            </Button>
            <Button Command="{Binding LoadCommand}"
                    ToolTip="è®€å–è¨­å®š">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“‚" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="è®€å–" Margin="2"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding SaveCommand}" 
                    ToolTip="å„²å­˜è¨­å®š">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¾" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="å„²å­˜" Margin="2"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding DeleteSelectedItemCommand}"
                    ToolTip="åˆªé™¤é¸ä¸­çš„é …ç›®">
